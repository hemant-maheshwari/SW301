<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PocketCloset.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout x:Name="MasterLayout">
            <StackLayout x:Name="LogoStack" VerticalOptions="FillAndExpand">
                <Image x:Name="LoginIcon" Source="LoginIcon.png" Margin="0,40,0,0"/>
            </StackLayout>
            <StackLayout x:Name="LoginEntriesStack" VerticalOptions="StartAndExpand">
                <StackLayout.Padding>
                    <OnIdiom x:TypeArguments="Thickness" >
                        <OnIdiom.Phone>40,0,40,0</OnIdiom.Phone>
                        <OnIdiom.Tablet>140,150,140,0</OnIdiom.Tablet>
                    </OnIdiom>
                </StackLayout.Padding>
                <StackLayout>
                    <Label Text="Forgot Your Password?" HorizontalTextAlignment="Center" VerticalTextAlignment="Start" TextColor="LightGray" FontSize="20"/>
                    <Entry x:Name="entryForgotPasswordUserName" Placeholder="Enter username" PlaceholderColor="LightGray" TextColor="White" Margin="0,40,0,0"/>
                    <Entry x:Name="entryForgotPasswordEmail" Placeholder="Email" PlaceholderColor="LightGray" TextColor="White" Keyboard="Email"/>
                    <Label Text="Security Question:" TextColor="LightGray"/>
                    <Label x:Name="lblSecQuestion" TextColor="LightGray" HorizontalOptions="FillAndExpand" FontSize="18"/> <!--Security question binding data -->
                    <Entry x:Name="entryForgotPasswordSecQuestion" Placeholder="Enter answer" PlaceholderColor="LightGray" TextColor="White" HorizontalOptions="FillAndExpand"/>
                    <Button Text="Submit Request" Clicked="sendResetLink"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 